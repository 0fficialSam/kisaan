<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/image1"
    android:gravity="center_vertical"
    android:orientation="vertical"

    tools:context=".MainFragment">


    <Button
        android:id="@+id/bt_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"
        android:background="#00FFFFFF"
        android:text="Seller"
        android:textAllCaps="false"
        android:textColor="#030303"
        android:textSize="32sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_buyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_seller"
        android:layout_marginStart="22dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"
        android:background="#00FFFFFF"
        android:text="Buyer"
        android:textAllCaps="false"
        android:textColor="#070707"
        android:textSize="32sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_transport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_buyer"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"
        android:background="#00FFFFFF"
        android:text="Transportation"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_officer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_transport"
        android:layout_marginStart="22dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"
        android:background="#00FFFFFF"
        android:text="Officer"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/vdbtn"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@id/bt_officer"
        android:layout_alignRight="@id/bt_officer"
        android:layout_marginTop="59dp"
        android:layout_marginRight="29dp"
        android:cropToPadding="false"
        android:foregroundGravity="center_vertical"
        android:src="@drawable/vdbtn" />


</RelativeLayout>